#include <iostream>

using namespace std;

int factor(unsigned long int n)
{
    int c=0;
    for(int i=1;i<=n;i++)
    {
        if(n%i==0)
        c++;
    }
    return c;
}    


int main()
{
   int i;
   unsigned long sum=0,count,num=1;
   while(i!=0)
   {
       cout<<"\nnum:"<<num;
       for(unsigned long int j=0;j<=num;j++)
       {
           sum=sum+j;
           
       }
       //cout<<"\nsum:"<<sum;
       count=factor(sum);
       //cout<<"\tcount:"<<count;
       if(count==500||count>500)
       {
           i=0;
          // cout<<"\nnumber is:"<<num<<" and sum is "<<sum;
           break;
       }
       else
       sum=0;
       num++;
       
       
   }
   
   return 0;
}
